<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/arka9"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:divider="?android:dividerHorizontal"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="313dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"

            android:divider="?android:dividerHorizontal"
            android:orientation="horizontal"
            android:showDividers="middle">


            <LinearLayout
                android:layout_width="105dp"
                android:layout_height="64dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:onClick="baslangic"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="3"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/baslat" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="131dp"
                    android:layout_height="0px"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Başlat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="105dp"
                android:layout_height="64dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:onClick="pauseTimer"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="3"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/duraklat" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="131dp"
                    android:layout_height="0px"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Duraklat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="105dp"
                android:layout_height="64dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:onClick="bitis"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="3"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/bitir" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="131dp"
                    android:layout_height="0px"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Bitir" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="313dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:divider="?android:dividerHorizontal"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="105dp"
                android:layout_height="64dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="savedLocations"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="3"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/history" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="131dp"
                    android:layout_height="0px"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Kayıtlarım" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="105dp"
                android:layout_height="64dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="3"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/cast_abc_scrubber_control_to_pressed_mtrl_005" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="131dp"
                    android:layout_height="0px"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Duraklat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="105dp"
                android:layout_height="64dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="logOut"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="3"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/exit" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="131dp"
                    android:layout_height="0px"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Çıkış" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.onur.kryptow.timetravel.custom_font.LedFont
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="111dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="00:00:00"
        android:textSize="80dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold|italic" />


</RelativeLayout>